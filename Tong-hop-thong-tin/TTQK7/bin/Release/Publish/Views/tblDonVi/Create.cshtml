@model TTQK7.tblDonVi 

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="myModalLabel">Thêm mới đơn vị</h4>
</div>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    <div class="modal-body">
        <p style="text-align:center;font-style:italic;">Đơn vị mới sẽ trực thuộc: <strong>@ViewBag.path</strong></p>
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label class="control-label col-md-3">Tên đơn vị</label>
                <div class="col-md-9">
                    @Html.EditorFor(model => model.TenDonVi, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenDonVi, "", new { @class = "text-danger" })
                </div>
            </div>
           
            @Html.HiddenFor(model => model.IsLast)

            @Html.HiddenFor(model => model.ParentID)
            
        </div>
    </div>    
    <div class="modal-footer">
        <button class="btn btn-default" data-dismiss="modal" style="margin-bottom:0px;">
            <i class="fa fa-ban"></i> Hủy
        </button>
        <button class="btn btn-success" type="submit">
            <i class="fa fa-save"></i> Lưu thông tin
        </button>
    </div>
}

