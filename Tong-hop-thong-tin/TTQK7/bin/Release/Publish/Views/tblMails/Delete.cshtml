@model TTQK7.tblMail

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="myModalLabel">Bạn có chắc muốn xóa mail này?</h4>
</div>
<div class="modal-body">
    <table class="table no-border table-striped table-hover">
        <tr>
            <th>Tiêu đề:</th>
            <td>@Html.DisplayFor(model => model.TieuDe)</td>
        </tr>
        <tr>
            @{ 
                string nguoiGui = Model.tblUser.FirstName + " " + Model.tblUser.LastName;

            }
            <th>Người gửi:</th>
            <td>@nguoiGui</td>
        </tr>
    </table>
</div>




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="modal-footer">
        <button class="btn btn-default" data-dismiss="modal" style="margin-bottom:0px;">
            <i class="fa fa-ban"></i> Hủy
        </button>
        <button class="btn btn-danger" type="submit">
            <i class="fa fa-trash"></i>Xóa
        </button>
    </div>
}

